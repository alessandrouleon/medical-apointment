{
    "openapi": "3.0.0",
    "info": {
        "title": "Serviço de agendamento de consulta",
        "description": "API responsavel pelo agendamento de consulta",
        "vesion": "1"
    },
    "paths": {
        "/speciality": {
            "post": {
                "tags": [
                    "Speciality"
                ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "description": "Cadastro de especialidade",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/ISpecialityRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ISpecialityResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/user/login": {
            "post": {
                "tags": [
                    "users"
                ],
                "description": "Authenticação do Usuário",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/LoginRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Token gerado"
                    },
                    "401": {
                        "description": "Menssagem de error"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "ISpecialityRequest": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "Nome da especialidade",
                        "example": "NAME_TEST"
                    },
                    "description": {
                        "type": "string",
                        "description": "Descrição da especialidade",
                        "example": "DESCRIPTION_TEST"
                    }
                },
                "required": [
                    "name",
                    "description"
                ]
            },
            "ISpecialityResponse": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "Nome da especialidade",
                        "example": "NAME_TEST"
                    },
                    "description": {
                        "type": "string",
                        "description": "Descrição da especialidade",
                        "example": "DESCRIPTION_TEST"
                    },
                    "id": {
                        "type": "string",
                        "description": "ID da Especialidade",
                        "format": "uuid"
                    },
                    "createdAt": {
                        "type": "string",
                        "description": "Data da criação da especialidades",
                        "format": "date-time"
                    }
                }
            },
            "LoginRequest": {
                "type": "object",
                "properties": {
                    "username": {
                        "type": "string",
                        "description": "Usuário de login",
                        "example": "user_test"
                    },
                    "password": {
                        "type": "string",
                        "description": "password de login",
                        "example": "password_test"
                    }
                }
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "description": "Authenticação de API",
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT",
                "tokenUrl": "http://localhost:3333/user/login"
            }
        }
    }
}